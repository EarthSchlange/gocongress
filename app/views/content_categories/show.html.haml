%h2= @content_category.name

.row-of-buttons
  - if can? :create, Content
    = button_to "New Content", new_content_path, :method => :get
  - if can? :edit, ContentCategory
    = button_to "Edit This Category", edit_content_category_path(@content_category), :method => :get

- if @content_category.travel_plans_link?
  .callout
    %h3 Airport Shuttle Bus
    %p
      Are you flying to / from #{@year.nearby_airport_city}?
      Do you want help connecting with the airport shuttle bus?
      If so, please
      - if can?(:edit, current_user)
        tell us about your
        = link_to "travel plans.", choose_attendee_user_path(current_user, :destination_page => :events)
      - else
        = link_to "sign in", new_user_session_path
        and tell us about your travel plans.

- @contents.each do |c|
  %h3= c.subject
  = Markdown.new(c.body).to_html.html_safe
  - if can? :manage, c
    .row-of-buttons
      = button_to "Edit", edit_content_path(c), :method => :get
      = button_to "Delete", c, :method => :delete, :data => {:confirm => 'Are you sure?'}
