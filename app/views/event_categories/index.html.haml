- mnh = EventCategory.model_name.human
- mnhp = mnh.pluralize

%h2= page_title

- if can? :create, EventCategory
  .flow-padding= button_to "New #{mnh}", new_event_category_path, :method => "get"

- if @event_categories.empty?
  %p There are no #{mnhp.downcase} yet.
- else
  %table.semantic.zebra.fullwidth
    %tr
      %th Category
      %th
      %th
  
    - @event_categories.each do |c|
      %tr
        %td= link_to c.name, c
        %td
          -if can? :update, c
            = link_to 'Edit', edit_event_category_path(c)
        %td
          -if can? :delete, c
            = link_to 'Delete', c, :confirm => 'Are you sure?', :method => :delete

%br
