.left-column
  %h2= user_account_title @user, 'Account'
  %table.lightweight
    %tbody
      %tr
        %th Email
        %td
          .hardwrap{:style => "max-width:250px;"}= @user.email
        %td.smalltext= link_to 'Edit', edit_email_for_user_path(@user)
      %tr
        %th Password
        %td ***
        %td.smalltext= link_to 'Edit', edit_password_for_user_path(@user)
      - if can? :manage, @user
        %tr
          %th Role
          %td= @user.role_name
          - if can? :edit, @user
            %td.smalltext= link_to 'Edit', edit_user_path(@user)

.right-column
  %h2 Balance
  = render :partial => 'shared/balance', :locals => {:user => @user, :show_detail_links => true}
  %p= button_to "Make a Payment", pay_user_path(@user), :method => "get", :class => 'button-emphasis'

%br

%h2 Attendees

- if @user.attendees.empty?
  %p
    You don't have any attendees!  Please
    = link_to 'register', add_attendee_to_user_path
    at least one person!
- else
  %p
    = link_to 'Register another attendee', add_attendee_to_user_path
    or click on an attendee to edit.
  %table.semantic.fullwidth
    %thead
      %tr
        %th Name
        %th Rank
        %th Age *
        %th
    %tbody
      - for a in @attendees
        %tr
          %td.attendee_name_column= link_to a.get_full_name, a
          %td= a.get_rank_name
          %td= a.age_in_years.floor
          %td
            - if a.is_primary
              Primary&nbsp;Attendee
            - else
              =link_to 'Delete', a, :data => {:confirm => "Are you sure you want to delete this attendee?"}, :method => :delete

  %p.smalltext
    * Age on #{CONGRESS_START_DATE[@year.year].to_formatted_s(:long)}

%br

-if @has_minor_attendee
  %h3 Regarding Minors
  %p
    At least one of the attendees on this account is a minor.
    Do not forget to send the #{link_to_liability_release} to the
    = link_to 'registrar.', contacts_path
