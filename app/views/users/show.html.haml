%h1 My Account

%table.lightweight
  %tbody
    %tr
      %th Email
      %td= @user.email

%p= link_to 'Edit my account', edit_user_path(@user)

%br/

- for a in @attendees
  .attendee-card
    .attendee-card-contents
      %h2= a.get_full_name
      %p= if a.is_primary then "Primary Attendee" end
      %table.lightweight
        %tbody
          %tr
            %th Email
            %td= a.email
          %tr
            %th Rank
            %td= a.get_rank_name
      %p= link_to 'Edit this attendee', edit_attendee_path(a)

.attendee-card
  .attendee-card-contents
    %p= link_to 'Register another attendee', new_attendee_path
