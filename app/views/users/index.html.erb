<h1>Who's Coming?</h1>

<p>If you want to play baduk for a week with all these cool people,
then you should <%= link_to 'register', '/users/sign_up' %>!</p>

<table class="semantic fullwidth">
	<thead>
		<tr>
			<th>Given Name</th>
			<th>Family Name</th>
			<th>Email</th>
			<th>Date</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.primary_attendee.given_name %></td>
				<td><%= user.primary_attendee.family_name %></td>
				<td><%= user.email %></td>
				<td><%= user.created_at %></td>
				<td><%= link_to 'Show', user %></td>
				<td><%= link_to 'Edit', edit_user_path(user) %></td>
				<td>
					<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
