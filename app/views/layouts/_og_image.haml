  raise TypeError unless @og_data.is_a?(OpenGraphData)
  image = @og_data.image

- if image.present?
  %meta{:property => "og:title", :content => "U.S. Go Congress #{@og_data.year}"}
  %meta{:property => "og:description", :content => @og_data.description}
  %meta{:property => "og:image", :content => image_path(image.fetch(:path))}
  %meta{:property => "og:image:type", :content => "image/png"}
  %meta{:property => "og:image:alt", :content => "The #{@og_data.year} U.S. Go Congress logo"}
  %meta{:property => "og:image:width", :content => image.fetch(:width)}
  %meta{:property => "og:image:height", :content => image.fetch(:height)}
