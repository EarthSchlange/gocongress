!!!
%html
  %head
    %meta{:content => "text/html", "http-equiv" => "Content-Type"}/
    = favicon_link_tag "favicon/#{@year.year}.ico"
    %title
      US Go Congress
      = @year.year
      - unless controller_name == "home" and action_name == "index"
        = "- #{page_title}"

    = csrf_meta_tag
    = javascript_include_tag :application
    = stylesheet_link_tag :application
    = stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.17/themes/ui-lightness/jquery-ui.css'
    - if Rails.env.production?
      = render 'shared/google_analytics'

  %body{:class => "#{@bodyClassList} year#{@year.year}"}

    %noscript
      #noscript-warning
        %h3 GoCongress.org works best with Javascript enabled

    #header-container
      #header
        #usgc-title-container
          %h1= link_to "#{@year.year} US Go Congress", year_path
        #usgc-when-where-container
          = @congress_city + ', ' + @congress_state
          = @congress_date_range + ','
          = @year.year
        %div{:style => "clear:both;"}
    .nav-container
      .nav
        %ul#nav-list-main
          - if current_user.present? || @year.registration_phase == "open"
            %li#nav-registration
              - if current_user.present?
                = link_to "My Account", user_path(current_user.id)
              - elsif @year.registration_phase == "open"
                = link_to "Start Here", new_user_registration_path
          %li
            - if current_user.nil?
              = link_to "Sign In", new_user_session_path
            - else
              = link_to "Sign Out", destroy_user_session_path, :method => :delete

          -# Tournaments
          - @tournaments_for_nav_menu.each do |t|
            %li= link_to t.name, t
          %li
            - tournaments_plural_phrase = @tournaments_for_nav_menu.empty? ? "Tournaments" : "All Tournaments"
            = link_to tournaments_plural_phrase, tournaments_path

          -# Activities
          - @activity_categories_for_menu.each do |c|
            %li= link_to c.name, c

          %li= link_to "Who is Coming?", attendees_path
          %li= link_to "Pros", vip_attendees_path
          %li= link_to "Costs", costs_path
          - @content_categories_for_menu.each do |c|
            %li= link_to c.name, c
          %li= link_to "Contact / Volunteer", contacts_path

    - if can_see_admin_menu?
      .nav-container-admin
        .nav
          %ul
            %li#nav-admin-title Admin Menu:
            %li= link_to "Users", users_path
            %li= link_to "Transactions", transactions_path
            %li= link_to "Pricing", pricing_path
            %li= link_to Activity.model_name.human.pluralize, activity_categories_path
            %li= link_to "Content", content_categories_path
            %li= link_to "Reports", reports_path
            %li= link_to "Settings", edit_year_path

    .content

      / Rails flash messages
      - if flash[:notice]
        .flash.flash-notice= notice
      - if flash[:alert]
        .flash.flash-alert= alert

      / Yield to view
      = yield

      %div{:style => "clear:both;"}

    -# The homepage (only) provides content_for this yield (a list of past years)
    = yield :before_footer

    #footer
      #sponsors
        - @year.sponsors.each do |name,url|
          %a{:href => url}= image_tag "sponsors/#{name}.jpg"
      #site-credit
        All times are #{Time.zone}
        %br
        Content &copy; #{@year.year} US Go Congress
        %br/
        Web Programming by
        %a{:href => "http://www.jaredbeck.com", :target => "_blank"} Jared Beck
