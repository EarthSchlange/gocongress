!!!
%html
  %head
    %meta{:content => "text/html", "http-equiv" => "Content-Type"}/
    = favicon_link_tag "favicon/#{@year}.ico"
    %title
      US Go Congress
      = @year
      - unless controller_name == "home" and action_name == "index"
        = "- #{page_title}"

    = csrf_meta_tag
    = javascript_include_tag :application
    = stylesheet_link_tag :application
    = stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css'

  %body{:class => "#{@bodyClassList} year#{@year}"}

    %noscript
      #noscript-warning
        %h3 GoCongress.org works best with Javascript enabled

    #header-container
      #header
        #usgc-title-container
          %h1= link_to "#{@year} US Go Congress", year_path
        #usgc-when-where-container
          = @congress_city + ', ' + @congress_state
          = @congress_date_range + ','
          = @year
        %div{:style => "clear:both;"}
    .nav-container
      .nav
        %ul#nav-list-main
          %li#nav-registration
            - if current_user.nil?
              = link_to "Start Here", new_user_registration_path
            - else
              =link_to "My Account", user_path(current_user.id)
          %li
            - if current_user.nil?
              =link_to "Sign In", new_user_session_path
            - else
              =link_to "Sign Out", destroy_user_session_path
          - @tournaments_for_nav_menu.each do |t|
            %li= link_to t.name, t
          %li
            - tournaments_plural_phrase = @tournaments_for_nav_menu.empty? ? "Tournaments" : "Other Tournaments"
            = link_to tournaments_plural_phrase, tournaments_path
          - @event_categories_for_menu.each do |c|
            %li= link_to c.name, c
          %li= link_to "Who is Coming?", attendees_path
          %li
            = link_to "Pros", vip_attendees_path
          %li= link_to "Costs", costs_path
          - @content_categories_for_menu.each do |c|
            %li= link_to c.name, c
          %li= link_to "Contact / Volunteer", contact_path

    - if can? :see_admin_menu, :layout
      .nav-container-admin
        .nav
          %ul
            %li#nav-admin-title Admin Menu:
            %li= link_to "Users", users_path
            %li= link_to "Transactions", transactions_path
            %li= link_to "Pricing", pricing_path
            %li= link_to "Events", event_categories_path
            %li= link_to "Content", content_categories_path
            %li= link_to "Reports", reports_path

    .content

      / Rails flash messages
      - if flash[:notice]
        .flash.flash-notice= notice
      - if flash[:alert]
        .flash.flash-alert= alert

      / Yield to view
      = yield

      %div{:style => "clear:both;"}

    -# The homepage (only) provides content_for this yield (a list of past years)
    = yield :before_footer

    #footer
      #sponsors
        %a{:href => "http://www.usgo.org"}
          = image_tag "sponsors/aga.jpg"
        - if @year == 2011
          %a{:href => "http://www.kbaduk.or.kr/eng/"}
            = image_tag "sponsors/kaba.jpg"
          %a{:href => "http://www.gokgs.com"}
            = image_tag "sponsors/kgs.jpg"
      #site-credit
        Content &copy; #{@year} US Go Congress
        %br/
        Web Programming by
        %a{:href => "http://www.jaredbeck.com", :target => "_blank"} Jared Beck
        %br/
        Hosted at
        %a{:href => "http://www.heroku.com", :target => "_blank"} Heroku
