- raise "Resource is undefined in partial" if resource.nil?

-if resource.errors.any?
  #error_explanation
    %h2
      Please fix
      = resource.errors.count == 1 ? "this" : "these"
      = pluralize(resource.errors.count, "thing") 
      about your
      = resource.class.model_name.human.downcase
    %ul
      - resource.errors.full_messages.each do |msg|
        %li= msg
