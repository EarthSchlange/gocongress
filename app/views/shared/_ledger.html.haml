- if user.transactions.size == 0
  %p No transactions found.
- else
  %table.semantic.fullwidth
    %thead
      %tr
        %th Payment Date
        %th Type
        %th.numeric Amount
    %tbody
      - for t in user.transactions.for_payment_history.order('created_at desc')
        %tr
          %td= t.created_at.to_date.to_formatted_s(:long)
          %td= t.get_trantype_name_public
          %td.numeric= number_to_currency t.get_ledger_amount
      %tr.total
        %th{ :colspan => 2 } Total
        %td.numeric= number_to_currency user.amount_paid
