= render "#{@year.year}/home/app" rescue nil
- if @year.year == 2020
  %div.egc-logo
    = link_to year_path do
      - f = "logo/usgc/2020e.png"
      - if image_file?(f)
        = image_tag "logo/usgc/2020e.png"
    #donate
      #donate-logo
        = image_tag "sponsors/aga.jpg"
      %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post"}
        %input{:type => "hidden", :name => "cmd", :value => "_s-xclick"}
        %input{:type => "hidden", :name => "hosted_button_id", :value => "EMDGU3QUWMB66"}
        %input{:type => "image", :src => "https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif", :border => "0", :name => "submit", :alt => "PayPal - The safer, easier way to pay online!"}
        %img{:class => "graphic", :alt => "", :border => "0", :src => "https://www.paypal.com/en_US/i/scr/pixel.gif", :width => "1", :height => "1"}
      #donate-logo
        = image_tag "sponsors/AGF-logo-small.gif"
      %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post", :target => "_top"}
        %input{:type => "hidden", :name => "cmd", :value => "_s-xclick"}/
        %input{:type => "hidden", :name => "hosted_button_id", :value => "AV7N56PNCNEKE"}/
        %input{:type => "image", :src => "https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif", :border => "0", :name => "submit", :title => "PayPal - The safer, easier way to pay online!", :alt => "Donate with PayPal button"}/
        %img{:alt => "", :border => "0", :src => "https://www.paypal.com/en_US/i/scr/pixel.gif", :width => "1", :height => "1"}/
  = render @contents
= render "#{@year.year}/home/logo_and_welcome" rescue render 'logo_and_welcome'

%div.homepage-secondary
  #gallery-column
    = render 'slideshow'
  = render 'addresses'
  - if @year.year >= 2016
    = render "#{@year.year}/home/mailing_list" rescue render 'mailing_list'
  - if @year.year != 2020
    = render @contents
= render 'past_years'
