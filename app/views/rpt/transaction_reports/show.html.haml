- mnh = Transaction.model_name.human
- csv_path = rpt_transaction_report_path + '.csv'

%h2= page_title

%table.semantic
  %thead
    %tr
      %th= mnh + " Type"
      %th.numeric #
      %th.numeric $
  %tbody
    %tr
      %td Sales
      %td.numeric= @sales.count
      %td.numeric= number_to_currency(@sales_sum, :unit => '')

    -# Display refunds and comps as negative numbers because they
    -# are subtracted from sales to get the total.
    %tr
      %td Refunds
      %td.numeric= @refunds.count
      %td.numeric= number_to_currency(@refunds_sum * -1, :unit => '', :negative_format => "(%n)")
    %tr
      %td Comps
      %td.numeric= @comps.count
      %td.numeric= number_to_currency(@comps_sum * -1, :unit => '', :negative_format => "(%n)")
    %tr
      %td Total
      %td.numeric= @transactions.length
      %td.numeric= number_to_currency(@total_sum, :unit => '')

%p= button_to "Export #{mnh.pluralize} To CSV", csv_path, :method => "get"
