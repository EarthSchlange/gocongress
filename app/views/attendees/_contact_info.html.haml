%fieldset
  .field
    = f.label :phone
    = f.text_field :phone

  -# For the primary attendee, the email has already been entered.
  -# No need to ask for it twice.
  - if @attendee.is_primary
    = f.hidden_field :email
  - else
    .field
      = f.label :email
      = f.text_field :email

  .field
    = f.label :address_1
    = f.text_field :address_1
  .field
    = f.label :address_2
    = f.text_field :address_2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip

  -# The `country_select` method is provided by the country-select gem
  .field
    = f.label :country
    = f.country_select :country, PRIORITY_COUNTRIES, { :include_blank => true }
