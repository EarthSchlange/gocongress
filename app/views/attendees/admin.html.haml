%h2
  Administration for
  = @attendee.get_full_name

= form_for( @attendee ) do |f|

  -# Page parameter.  Required.  Determines validations, among other things.
  = hidden_field_tag :page, @page

  = render :partial => "shared/error_messages", :locals => { :resource => @attendee }

  %fieldset
    .field
      = f.label :deposit_received_at
      = f.date_select :deposit_received_at, |
        :start_year => Time.now.year - 1, |
        :end_year => Time.now.year + 1, |
        :include_blank => true
      %br
      %span.smalltext.aligned-with-input
        When was the initial deposit received for this attendee?
        This will determines eligibility for "early-bird" discounts.
    .field
      = f.label :minor_agreement_received
      = f.check_box :minor_agreement_received
    .field
      = f.label :confirmed
      = f.check_box :confirmed
      %br
      %ul.smalltext.aligned-with-input
        %li Inital deposit paid
        %li Minor agreement received (if applicable)
        %li Check membership in reciprocating foreign association
    .field
      = f.label :comment
      = f.text_area :comment, {:class => "inline", :rows => 3 }

  %fieldset
    .aligned-with-input
      = f.submit "Submit"
      = link_to "cancel", user_path(@attendee.user)
