= form_for(@job) do |f|
  = render :partial => "shared/error_messages", :locals => { :resource => @job }

  %fieldset
    .field
      = f.label :jobname
      = f.text_field :jobname
      %span.smalltext
        Job title
    .field
      = f.label :email
      = f.text_field :email
      %span.smalltext
        The email shown to the public on "Contact Us"
    .field
      = f.label :total_needed
      = f.text_field :total_needed
      %span.smalltext
        Total number of people needed for this position.
    .field
      = f.label :vacancies
      = f.text_field :vacancies
    .field
      = render partial: "shared/md_area", locals: { :obj => :job, :atr => :description }

  .field
    %label
    = f.submit
