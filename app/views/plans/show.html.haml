%h2 Plan Details

%table.lightweight
  %tr
    %th= trl_attr 'plan', 'name'
    %td= @plan.name
  %tr
    %th= trl_attr 'plan_category', 'name'
    %td= link_to @plan.plan_category.name, @plan.plan_category
  %tr
    %th= trl_attr 'plan', 'price'
    %td= format_price @plan.price
  %tr
    %th= trl_attr 'plan', 'inventory'
    %td= @plan.inventory
  %tr
    %th= trl_attr 'plan', 'age_min'
    %td= @plan.age_min
  %tr
    %th= trl_attr 'plan', 'age_max'
    %td= @plan.age_max
  %tr
    %th= trl_attr 'plan', 'description'
    %td= Markdown.new( @plan.description ).to_html.html_safe

%br

= link_to 'Edit', edit_plan_path(@plan)
