= form_for @plan do |f|
  -if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :age_min
    = f.text_field :age_min
  .field
    = f.label :age_max
    = f.text_field :age_max
  .actions
    = f.submit 'Save'
