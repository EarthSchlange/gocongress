= form_for @plan do |f|
  -if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .field
      = f.label :name
      = f.text_field :name
    .field
      %label This plan has
      = f.check_box :has_rooms
      = f.label :has_rooms, "Room(s)", :class => "inline-label"
      &nbsp;
      = f.check_box :has_meals
      = f.label :has_meals, "Meal(s)", :class => "inline-label"
    .field
      %label{ :for => 'plan_description'}
        Description
        %br
        %span.smalltext
          You can format the text (bold, etc.) with
          %a{ :href => 'http://en.wikipedia.org/wiki/Markdown', :target => '_blank' } Markdown
          syntax.
      = f.text_area :description, { :class => 'wide', :rows => 5 }
    .field
      = f.label :price
      = f.text_field :price

  %fieldset
    %legend Attendee Age Requirements
    %p Certain plans are intended for youth, for teens, or for adults.
    .field
      = f.label :age_min
      = f.text_field :age_min
    .field
      = f.label :age_max
      = f.text_field :age_max
      %span.smalltext (optional)

  .actions
    = f.submit 'Save'
