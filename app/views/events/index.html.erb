<h1>Listing events</h1>

<table class="semantic fullwidth">
	<tbody>
		<% @arEventsByDate.each do |d,arEvt| %>
			<tr class="date-header">
				<th colspan="7">
					<%= d %>
				</th>
			</tr>
			<tr class="lesser-header">
				<th>Event</th>
				<th>Transport Departure Time</th>
				<th>Event Start/Arrival Time</th>
				<th>Price</th>
				<th colspan="3"></th>
			</tr>
			<% arEvt.each do |e| %>
				<tr>
					<td><%= e.evtname %></td>
					<td><%= e.evtdeparttime %></td>
					<td><%= e.evtstarttime %></td>
					<td><%= e.evtprice %></td>
					<td><%= link_to 'Show', e %></td>
					<td><%= link_to 'Edit', edit_event_path(e) %></td>
					<td><%= link_to 'Destroy', e, :confirm => 'Are you sure?', :method => :delete %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<br />

